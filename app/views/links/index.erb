<h1>Links</h1>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL:   <%= link.url %>
      Tags:
      <% link.tags.each do |tag| %>
        <%= tag.name %>
      <% end %>
    </li>
    <% end %>
</ul>

<form action="/links/new" method="get">
<input type="Submit" value="Add new link">
</form>
